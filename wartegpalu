    int bebekGoreng = 18000, bebekBakar = 20000, bebekPanggang = 23000;
    int tahuGoreng = 5000, pepesTahu = 9000;
    int tempeGoreng = 6000, tempeBacem = 8000, tempeOrek = 6000;
    int perkedalJagung = 3000, perkedalKentang = 6000;
    int sayurSop = 12000, sayurAsem = 12000, sotoPalu = 13000, sayurLodeh = 12000;
    int esTehManis = 5000, tehManisPanas = 4000, tehTawarPanas = 2000, tehTawarDingin = 3000;
    int kopiABC = 5000, kopiSusu = 7000, redVelvet = 7000, matcha = 7000;
    int popIceAllVariants = 5000, nutrisariAllVariants = 5000, airMineral = 3000;
    int quantity[] = {};
    char Konfirmasi;

    printf("\n");
