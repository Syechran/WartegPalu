            }while( subMenu > 7 || subMenu < 1 );

            if ( subMenu == 1 ){
                printf("\nAnda Berhasil Menambahkan Nasi Putih !\n");
                totalHarga += nasiPutih;
            } else if( subMenu == 2){
                printf("\nAnda Berhasil Menambahkan Nasi Goreng !\n");
