            } else if( subMenu == 3){
                printf("\nAnda Berhasil Menambahkan Nasi Bakar !\n");
                totalHarga += nasiBakar;
            } else if( subMenu == 4){
                printf("\nAnda Berhasil Menambahkan Nasi Kuning !\n");
                totalHarga += nasiKuning;
            } else if( subMenu == 5){
                printf("\nAnda Berhasil Menambahkan Nasi Daun Jeruk !\n");
                totalHarga += nasiDaunJeruk;
            } else if( subMenu == 6){
                printf("\nAnda Berhasil Menambahkan Nasi Uduk !\n");
                totalHarga += nasiUduk;
            } else if( subMenu == 7){
                printf("\nAnda Berhasil Menambahkan Nasi Merah !\n");
                totalHarga += nasiMerah;
            } else if( subMenu == 0 ){
                break;
            } 

            printf("\nApakah Kamu Ingin Mengulang Pesanan Kategori ( Y / N ): ");
            scanf("%s", &Konfirmasi);
        }while( Konfirmasi == 'Y' || Konfirmasi == 'y' );
    
    case 2:
    printf("Silahkan memilih jensi ayam sesuai nomor:\n");
    printf("1.Ayam goreng : Rp 15.000\n");
    printf("2.Ayam bakar : Rp 17.000\n");
    printf("3.Ayam geprek : Rp 15.000\n");
    printf("4.Ayam tulang lunak : Rp 15.000\n");
    printf("5.Ayam pop : Rp 8.000\n");
    scanf("%d",&subMenu);
    while( subMenu > 1 || subMenu < 6 ){

            if ( subMenu == 1 ){
                printf("\nAnda Berhasil Menambahkan Ayam Goreng !\n");
                totalHarga += ayamGoreng;
            } else if( subMenu == 2){
                printf("\nAnda Berhasil Menambahkan Ayam Bakar !\n");
                totalHarga += ayamBakar;
            } else if( subMenu == 3){
                printf("\nAnda Berhasil Menambahkan Ayam Geprek !\n");
                totalHarga += ayamGeprek;
            } else if( subMenu == 4){
                printf("\nAnda Berhasil Menambahkan Ayam Tulang Lunak !\n");
                totalHarga += ayamTulangLunak;
            } else if( subMenu == 5){
                printf("\nAnda Berhasil Menambahkan Ayam Pop !\n");
                totalHarga += ayamPop;
            } 
                break;
            } 

    case 3:
    printf("silahkan memilih menu seafood sesuai angka yang kami sediakan:\n");
    printf("1.ikanGoreng : Rp15.000\n");
    printf("2.ikanBakar : Rp18.000\n");
    printf("3.ikanGurame : Rp23.000\n");
    printf("4.udangSausTiram : Rp19.000\n");
    scanf("%d",&subMenu);

    while( subMenu > 1 || subMenu < 5 ){
       if ( subMenu == 1 ){
                printf("\nAnda Berhasil Menambahkan Ikan Goreng !\n");
                totalHarga += ikanGoreng;
            } else if( subMenu == 2){
                printf("\nAnda Berhasil Menambahkan Ikan Bakar !\n");
                totalHarga += ikanBakar;
            } else if( subMenu == 3){
                printf("\nAnda Berhasil Menambahkan Ikan Gurame !\n");
                totalHarga += ikanGurame;
            } else if( subMenu == 4){
                printf("\nAnda Berhasil Menambahkan Udang Saus Tiram !\n");
                totalHarga += udangSausTiram;
            } 

                break;
            }

            printf("Total Harga Pesananmu adalah: %d", totalHarga);

    }

    return 0;
}

