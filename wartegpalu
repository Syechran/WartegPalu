    printf("8. Sayur\n");
    printf("9. Minuman\n");
    printf("10. Keluar Aplikasi\n");
    printf("======================\n");
    printf("Silahkan Pilih Menu Kategori Anda : ");
    scanf("%d", &menuKategori);
    }while( menuKategori > 10 || menuKategori < 1 );

    switch(menuKategori){
        case 1:
        do{
            do{
            printf("\nSilahkan Memilih Menu Nasi Berdasarkan Nomor: \n");
            printf("1. Nasi Putih : Rp3.000\n");
            printf("2. Nasi Goreng : Rp15.000\n");
            printf("3. Nasi Bakar : Rp10.000\n");
            printf("4. Nasi Kuning : Rp12.000\n");
            printf("5. Nasi Daun Jeruk : Rp7.000\n");
            printf("6. Nasi Uduk : Rp12.000\n");
            printf("7. Nasi Merah : Rp4.000\n");
